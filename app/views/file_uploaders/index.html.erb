<p id="notice"><%= notice %></p>

<h1>Files</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col" colspan="1">file name</th>
      <th scope="col" colspan="3">options</th>
    </tr>
  </thead>

  <tbody>
    <% @file_uploaders.each do |file_uploader| %>
      <tr>

        <td>
        <% file_uploader.data_file.each do |file|%>
          <span class="file-name"><%= file.filename %></span>
        <% end %>
        </td>
        <td>
          <%= button_to 'Show', file_uploader, :method=>"get", class: "btn btn-sm btn-light" %>
        </td>
        <td><%= button_to 'Edit', edit_file_uploader_path(file_uploader), :method=>"get", class: "btn btn-sm btn-primary" %></td>
        <td><%= button_to 'Destroy', file_uploader, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

